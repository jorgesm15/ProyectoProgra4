@model IEnumerable<ProyectoProgra4.Rutinas>

<h2>Rutinas</h2>

<br />
<br />

<table class="ui twelve column purple table" style="text-align:center">
    <thead style="background-color: #45403F; color:white">
        <tr>
            <th>Nombre de la rutina</th>
            <th>Duración</th>
            <th>Series</th>
            <th>Repetición</th>
            <th>Descanso</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NomEjercicio</td>
                <td>@item.Duracion</td>
                <td>@item.Series</td>
                <td>@item.Repeticion</td>
                <td>@item.Descanso</td>
                <td>
                    <div class="col-sm-3">
                        <button type="button" class="ui medium button" id="btnModificar" style="margin-top: 10px; background-color:#F05742; color:white" onclick="ActualizarDatos(@item.ID_Instructor);">
                            Modificar
                        </button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts
{
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.3.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fomantic-ui@2.8.7/dist/semantic.min.js"></script>

    @Scripts.Render("/Funciones/RutinaF.js")

}