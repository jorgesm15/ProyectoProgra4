@model ProyectoProgra4.Entidades.clsUsuario

@{
    ViewBag.Title = "InsertarUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

@using (Html.BeginForm("InsertarUsuario", "Registrar", FormMethod.Post, new { @class = "ui form" }))
{

    <div class="container body-content">
        <h2 class="ui dividing header">Registrar</h2>
        <div class="field">
            <label>Cédula</label>
            <div class="three fields">
                <div class="field">
                    @Html.TextBoxFor(Model => Model.cedula, new { @class = "form-control", @id = "cedulaPersona" })
                </div>
                <div class="field">
                    <div class="ui big button" onclick="ConsultarPersona();" tabindex="0">Buscar</div>
                </div>
            </div>
        </div>

        <div class="field">
            <div class="three fields">
                <div class="field">
                    <label>Nombre</label>
                    @Html.TextBoxFor(Model => Model.nombre, new { @class = "form-control", @id = "txtNombre", @readonly = "true", @style = "background-color: #f6f6f6" })
                </div>
                <div class="field">
                    <label>Primer Apellido</label>
                    @Html.TextBoxFor(Model => Model.primerApellido, new { @class = "form-control", @id = "txtPrimerApellido", @readonly = "true", @style = "background-color: #f6f6f6" })
                </div>
                <div class="field">
                    <label>Segundo Apellido</label>
                    @Html.TextBoxFor(Model => Model.segundoApellido, new { @class = "form-control", @id = "txtSegundoApellido", @readonly = "true", @style = "background-color: #f6f6f6" })
                </div>
            </div>
        </div>
        <div class="field">
            <div class="three fields">
                @* Revisar campo de texto, es de 12 pero no se visualiza *@
                <div class="field">
                    <label>Correo Electrónico</label>
                    @Html.TextBoxFor(Model => Model.correo, new { @class = "form-control", @id = "txtCorreo" })
                </div>
                <div class="field">
                    <label>Contraseña</label>
                    @Html.TextBoxFor(Model => Model.contrasenia, new { @class = "form-control", @id = "txtContrasenia", @type = "password" })
                </div>
            </div>
        </div>
        <br />
        <div class="four fields">
            <div class="field">
                <label>Edad</label>
                @Html.TextBoxFor(Model => Model.edad, new { @class = "form-control", @id = "txtEdad" })
            </div>
            <div class="field">
                <label>Número de teléfono</label>
                @Html.TextBoxFor(Model => Model.telefono, new { @class = "form-control", @id = "txtTlf" })
            </div>
            <div class="field">
                <label>Número de emergencia</label>
                @Html.TextBoxFor(Model => Model.telefonoEmergencia, new { @class = "form-control", @id = "txtTlfEmergencia" })
            </div>

            @* Arreglar el select de los paises *@
            <!--<div class="field">
                <label>País</label>
                <div class="ui fluid search selection dropdown">
                    <input type="hidden" name="country">
                    <i class="dropdown icon"></i>
                    <div class="default text">Select Country</div>
                    <div class="menu">
                    </div>
                </div>
            </div>>-->
        </div>


        <h4 class="ui dividing header">Información Médica</h4>
        <div class="field">
            <div class="two fields">
                <div class="field">
                    <label>Peso</label>
                    <div class="ui right labeled input">
                        @Html.TextBoxFor(Model => Model.peso, new { @class = "form-control", @id = "txtPeso" })
                        <div class="ui basic label">
                            kg
                        </div>
                    </div>
                </div>
                <div class="field">
                    <label>Estatura</label>
                    <div class="ui right labeled input">
                        @Html.TextBoxFor(Model => Model.estatura, new { @class = "form-control", @id = "txtEstatura" })
                        <div class="ui basic label">
                            m
                        </div>
                    </div>
                </div>
            </div>

            <div class="field">
                <div class="field">
                    <label>Tipo de sangre</label>
                    @Html.TextBoxFor(Model => Model.tipoSangre, new { @class = "form-control", @id = "txtTipoSangre" })
                </div>
            </div>
        </div>

        <div class="ui form">
            <div class="field">
                <label>Condiciones Médicas</label>
                @Html.TextAreaFor(Model => Model.condicionesMedicas, new { @id = "txtCondiciones", @rows = "2" })
                @*<textarea rows="2"></textarea>*@
            </div>
        </div>

        <button type="submit" class="ui big button" style="margin-top: 10px;">
            Continuar
        </button>

    </div>
}

@section Scripts
{
    @Scripts.Render("/Funciones/HaciendaAPI.js")
}

