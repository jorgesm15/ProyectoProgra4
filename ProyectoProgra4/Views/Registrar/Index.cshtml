        <h4 class="ui dividing header">Información Médica</h4>
        <div class="field">
            <div class="two fields">
                <div class="field">
                    <label>Peso</label>
                    <div class="ui right labeled input">
                        <input type="text" placeholder="Peso">
                        <div class="ui basic label">
                            kg
                        </div>
                    </div>
                </div>
                <div class="field">
                    <label>Estatura</label>
                    <div class="ui right labeled input">
                        <input type="number" min="0" name="Estatura" placeholder="Estatura">
                        <div class="ui basic label">
                            m
                        </div>
                    </div>
                </div>
            </div>

            <div class="field">
                <div class="field">
                    <label>Tipo de sangre</label>
                    <input type="text" name="tipoSangre" placeholder="Tipo de sangre">
                </div>
            </div>
        </div>

        <div class="ui form">
            <div class="field">
                <label>Condiciones Médicas</label>
                <textarea rows="2"></textarea>
            </div>
        </div>


        <div class="ui big button" style="margin-top: 10px;" tabindex="0">Continuar</div>
    </div>
