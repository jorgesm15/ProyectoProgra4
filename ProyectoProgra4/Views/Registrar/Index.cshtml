<form class="ui form">
    <div class="container body-content">
        <h2 class="ui dividing header">Registrar</h2>
        <div class="field">
            <label>Nombre y Apellidos</label>
            <div class="three fields">
                <div class="field">
                    <input type="text" placeholder="Nombre">
                </div>
                <div class="field">
                    <input type="text" placeholder="Primer Apellido">
                </div>
                <div class="field">
                    <input type="text" placeholder="Segundo Apellido">
                </div>
            </div>
        </div>
        <div class="field">
            <label>Correo Electrónico</label>
            <div class="three fields">
                @* Revisar campo de texto, es de 12 pero no se visualiza *@
                <div class="field">
                    <input type="text" name="Correo Electrónico" placeholder="Correo Electrónico">
                </div>
                <div class="field">
                    <input type="password" name="Contraseña" placeholder="Contraseña">
                </div>
            </div>
        </div>
        <br />
        <div class="four fields">
            <div class="field">
                <label>Edad</label>
                <input type="number" min="0" name="Edad" placeholder="Edad">
            </div>
            <div class="field">
                <label>Número de teléfono</label>
                <input type="number" min="0" name="Número de teléfono" placeholder="Número de teléfono">
            </div>
            <div class="field">
                <label>Número de emergencia</label>
                <input type="number" min="0" name="Número de emergencia" placeholder="Número de emergencia">
            </div>
            <div class="field">
                <label>Número de emergencia</label>
                <input type="number" min="0" name="Número de emergencia" placeholder="Número de emergencia">
            </div>

